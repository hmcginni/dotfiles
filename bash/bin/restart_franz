#!/bin/bash
#
# Restart Franz

franz_install=$(which franz)

if [[ -z $franz_install ]]
then
	notify-send "restart_franz" "Franz is not installed!"
    exit 1
else
	killall franz
    franz &>/dev/null &
	
    while [[ -z $(pnw franz) ]]
	do
        sleep 0.5		
    done
	
	xdotool windowminimize "$(pnw franz)"
fi

notify-send "Unlock Actions" "Restarted Franz"

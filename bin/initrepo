#!/bin/bash

baseDir=${PWD%/*}
binDir=$HOME/bin
libDir=$HOME/lib
dotsDir=$HOME
mlDir=$HOME/Documents/MATLAB

# Make directories
mkdir -p $binDir $libDir $mlDir

# Create links to files in $binDir, $libDir, and $mlDir
for filePath in $baseDir/bin/*; do
    fileName=${filePath##/*/}
    ln -bsv -T $filePath $binDir/$fileName
done

for filePath in $baseDir/lib/*; do
    fileName=${filePath##/*/}
    ln -bsv -T $filePath $libDir/$fileName
done

for filePath in $baseDir/dots/*; do
    fileName=${filePath##/*/}
    ln -bsv -T $filePath $dotsDir/$fileName
done

for filePath in $baseDir/matlab/*; do
    fileName=${filePath##/*/}
    ln -bsv -T $filePath $mlDir/$fileName
done

    
	    

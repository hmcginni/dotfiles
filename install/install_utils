#!/bin/bash

repoPath=${PWD%/*}

destPath=("$HOME/bin")
destPath+=("$HOME/lib/bash")
destPath+=("$HOME/Documents/MATLAB")
destPath+=("$HOME")
srcPath=("$repoPath/bash/bin")
srcPath+=("$repoPath/bash/lib")
srcPath+=("$repoPath/matlab")
srcPath+=("$repoPath/dots")

# Make directories
mkdir -p "${destPath[@]}"

# Copy files
for idx in seq 0 $(( ${#destPath[@]} - 1 )); do
    for file in "${srcPath[$idx]}"/*; do
    	if [[ $file != "README.org" ]]; then
	    ln -bsv -t "${destPath[$idx]}" "$file"
    	fi
    done
done




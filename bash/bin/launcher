#!/bin/bash

. ~/.fzf.bash

_main() {

	title="FZF Launcher"
	win=(60 10)
	off=(620 380)
	dims=$(printf "%dx%d+%d+%d" "${win[@]}" "${off[@]}")

	terms=$(xdotool search gnome-terminal)
	gnome-terminal --geometry="$dims" --window-with-profile=Launcher \
				   -e "sh -c fzf_launcher" &
	new_terms=$(xdotool search gnome-terminal)
	xdotool set_window --name "$title" --class "$title" \
			"$(xdotool getactivewindow)"

}

_main

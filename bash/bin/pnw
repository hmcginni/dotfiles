#!/bin/bash
#
# Print window ID for process <name>

if [[ $# != 1 && $# != 2 ]]; then
    echo -e "\n\tPNW -\tprint window ID for a specified process"
    echo -e "\tUsage:\tpnw <process_name>"
    exit 1
fi


name=$1
pid_name=$(pgrep -o "$name")
wid_name=$(wmctrl -lp | awk -v pid="$pid_name" '$0 ~ pid {print $1}')
echo "$wid_name"



#!/bin/bash
#
# Enlarge text on built-in display

num_displays=$(desk -n)
scale_factor=""
dconf_scale_factor_key="/org/gnome/desktop/interface/text-scaling-factor"

if [[ $num_displays -eq 1 ]]
then
    notify-send "embiggen" "Embiggening Text"
    scale_factor=1.1
else
    scale_factor=1.0
fi

dconf write "$dconf_scale_factor_key" "$scale_factor"

#!/bin/bash

file=$1
subdir=$2
destpath="$HOME/repos/hrmutils/$subdir"
destfile="${destpath}/${file}"

if [ -z $subdir ]; then
    printf "Please specify a subdirectory of the repository.\n"
    exit 1;
fi

if [ -L $file ]; then
    printf "%s is a symbolic link. Nothing to be done.\n" $file
    exit 0;
else
    src=$(readlink -f $file)
fi

mkdir -p $destpath
mv -v $src -t $destpath
ln -bsv -T $destfile $src

#!/bin/bash

## VARIABLES


gitDir="${HOME}/repos"


## ADD REPOSITORIES


sudo add-apt-repository -y ppa:noobslab/themes
sudo add-apt-repository -y ppa:noobslab/icons


## INSTALL PACKAGES


sudo apt update && sudo apt upgrade -y
sudo apt install -y ubuntu-unity-desktop unity-tweak-tool tmux git emacs emacs-goodies-el ipython gmrun arc-theme moka-icon-theme arc-icons wmctrl xdotool x11-utils youtube-dl dropbox chromium-browser build-essential

sudo snap install atom --classic
sudo snap install slack --classic
sudo snap install mailspring
sudo snap install google-play-music-desktop-player
sudo snap install remmina 


## CLONE REPOSITORY


mkdir -p $gitDir
cd $gitDir
git clone https://github.com/hrmcginnis/hrmutils.git


## INSTALL REPOSITORY FILES


cd hrmutils/install
./install_utils

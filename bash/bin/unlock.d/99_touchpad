#!/bin/bash

touchpad="Elan Touchpad"

if xinput list | grep -q "$touchpad"
then
	# Enable tap to select
	xinput set-prop "$touchpad" "libinput Tapping Enabled" 1

	# Enable natural scrolling
	xinput set-prop "$touchpad" "libinput Natural Scrolling Enabled" 1

	# Enable three-finger tap to middle click
	xinput set-prop "$touchpad" "libinput Middle Emulation Enabled" 1

	# Set acceleration to 0.4 (out of 1)
	xinput set-prop "$touchpad" "libinput Accel Speed" 0.35

	# Disable horizontal scrolling
	xinput set-prop "$touchpad" "libinput Horizontal Scroll Enabled" 0
fi

notify-send "99_touchpad" "Adjusting touchpad settings" -t 2500
#!/bin/bash
#
# Delete Temporary Files

root_dir="$HOME"
org_dir="$HOME"/org
src_dir="$HOME"/src

notify-send "rmtemp" "Deleting temp files ..."

#
# In ~:
#
#   + Temp files ending in "~" or "#"
#   + nohup.out files (from running a command in that directory with nohup)
#   + Broken symbolic links
#
find "$root_dir" -type f -name "*[~#]" -print -delete 2>/dev/null
find "$root_dir" -type f -name "nohup.out" -print -delete 2>/dev/null
find "$root_dir" -xtype l -print -delete 2>/dev/null

#
# In ~/src:
#
#   + Folders named "__pycache__"
#
find "$src_dir" -type d -name "__pycache__" -print -exec rm -rf {} 2>/dev/null \;

#
# In ~/org:
#
#   + HTML files
#
find "$org_dir" -type f -name "*.html" -print -delete 2>/dev/null

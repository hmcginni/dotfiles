#!/bin/bash
#
# Restart Franz

franz_install=$(which franz)

if [[ -z $franz_install ]]
then
	notify-send "restart_franz" "Franz is not installed!"
    exit 1
fi

killall franz
franz &>/dev/null &
	
while [[ -z $(pnw franz) ]]
do
    sleep 1		
done

xdotool windowminimize "$(pnw franz)"

notify-send "Unlock Actions" "Restarted Franz" -t 2500

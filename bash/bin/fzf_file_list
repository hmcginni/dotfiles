#!/bin/bash

title="Fuzzy Finder"

_get_selection() {
	find ~ -path ~/.local/share/Trash -prune -o -type f 2>/dev/null | \
		fzf --exact --height=10 --reverse
}

_main() {
	if selection=$(_get_selection)
	then
		nohup mimeopen "$selection" &>/dev/null & 
		notify-send "$title" "Opening $selection"
	fi
}

_main
